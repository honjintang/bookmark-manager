<h1>Links</h1>

<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title: <%= link.title %>
      URL:   <%= link.url   %>
    </li>
  <% end %>
</ul>
<form action='/links/new' method='get'>
<button type='submit'>
  Add new link
</button>
</form>

<form action='/tags/bubbles' method='post'>
  <label>
    Search By Filter
    <input type='text' name='filter_tag'>
  </label>

  <button type='submit' value='Filter'>
    Filter Tags
  </button>

</form>
