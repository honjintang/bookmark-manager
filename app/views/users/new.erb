<h1>Sign Up Form</h1>

<form action='/users' method='post'>

  <label>
    Email
    <input type='text' name='email'>
  </label>

  <label>
    Password
    <input type='password' name='password'>
  </label>

  <label>
    Confirm Password
    <input type='password' name='password_confirmation'>
  </label>

  <button type='submit' value="submit">
    Submit
  </button>
</form>
